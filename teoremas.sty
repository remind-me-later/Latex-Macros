\ProvidesPackage{teoremas}

% Requirements
\RequirePackage{amssymb}
\RequirePackage{etoolbox}
\RequirePackage[shortlabels]{enumitem}
\RequirePackage{multicol}
\RequirePackage{amsmath}
\RequirePackage[thmmarks, amsmath, thref]{ntheorem}

% General
%\renewcommand{\thesection}{\Roman{section}} 

% Theorems
\theoremstyle{plain}
\newtheorem{definition}{Definición}[section]
\newtheorem{theorem}{Teorema}[section]
\newtheorem{corollary}{Corolario}[theorem]
\newtheorem{lemma}[theorem]{Lema}
\newtheorem{remark}[theorem]{Nota}

\theorembodyfont{\normalfont}
\newtheorem{example}{Ejemplo}[section]

% Problems
\theorembodyfont{\normalfont}
\newtheorem{problem}[example]{Número}

\AtBeginEnvironment{problem}{\setcounter{equation}{0}}

% Solutions
\theoremheaderfont{\itshape}
\theoremseparator{. ---}
\theorembodyfont{\upshape}
\theoremsymbol{\ensuremath{\square}}
\newtheorem{proof}{Demostración}[theorem]
\newtheorem{solution}{Solución}[example]

\AtBeginEnvironment{solution}{\setcounter{equation}{0}}

